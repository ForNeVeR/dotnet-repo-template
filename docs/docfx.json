{
    "metadata": [
        {
            "src": [
                {
                    "src": "..",
                    "files": [
                        "Reuse/Reuse.csproj"
                    ]
                }
            ],
            "dest": "api"
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "**/*.{md,yml}"
                ],
                "exclude": [
                    "_site/**"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**"
                ]
            }
        ],
        "output": "_site",
        "template": [
            "default",
            "modern"
        ],
        "globalMetadata": {
            "_appName": "dotnet-reuse",
            "_appTitle": "dotnet-reuse",
            "_enableSearch": true,
            "pdf": false
        }
    }
}
